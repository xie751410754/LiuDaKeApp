<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.store_manager.StoreWalletActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:text="我的钱包"
                android:textColor="#333333"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_margin="15dp"
            android:background="@drawable/r4_while"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_all_get1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_all_get1"
                        android:text="0"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="全部红米"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:paddingTop="12dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_all_get2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_all_get2"
                        android:text="0"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="可用积分"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:paddingTop="12dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_all_get3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_all_get3"
                        android:text="0"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="待领积分"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:paddingTop="12dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_lingqu"
                    android:text="领取"
                    android:background="@drawable/left_shape"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:paddingLeft="11.5dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"

                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tuiguang"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="店铺推广"
                    android:drawablePadding="4dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingTop="12dp"
                    android:paddingBottom="15dp"
                    android:drawableLeft="@mipmap/icon_store_manager5"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_tixian"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="红米提现"
                    android:drawablePadding="4dp"
                    android:textColor="#333333"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="15dp"
                    android:textSize="14sp"
                    android:drawableLeft="@mipmap/icon_store_manager6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_margin="15dp"
            android:background="@drawable/r4_while"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@mipmap/icon_store_manager13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="钱包攻略"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:paddingLeft="12sp"
                    app:layout_constraintTop_toTopOf="@id/iv_1"
                    app:layout_constraintLeft_toRightOf="@id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="懂了才会用"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:paddingLeft="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_1"
                    app:layout_constraintLeft_toRightOf="@id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@mipmap/right_arrow_icon"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@mipmap/icon_store_manager13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="活动申请"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:paddingLeft="12sp"
                    app:layout_constraintTop_toTopOf="@id/iv_2"
                    app:layout_constraintLeft_toRightOf="@id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="引流神器"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:paddingLeft="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_2"
                    app:layout_constraintLeft_toRightOf="@id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@mipmap/right_arrow_icon"
                    android:layout_marginRight="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>