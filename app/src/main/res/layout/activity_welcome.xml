<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:indicator_normal_color="#D7D7D7"
        app:indicator_selected_color="#E62129"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/tv_go"
        android:layout_width="117pt"
        android:layout_height="49pt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50pt"
        android:layout_marginEnd="20pt"
        android:src="@mipmap/icon_go" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/img_go"
        android:layout_width="360pt"
        android:layout_height="80pt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140pt"
        android:src="@mipmap/icon_welcome_ljty" />

</RelativeLayout>