<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20pt"
    android:background="@drawable/round8white_shop"
    android:orientation="horizontal">
    
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="226pt"
        android:layout_height="234pt">

        <com.cdxz.liudake.view.roundedImageView.RoundedImageView
            android:id="@+id/ivStorePic"
            android:layout_width="226pt"
            android:layout_height="234pt"
            android:scaleType="centerCrop"
            app:riv_corner_radius="32pt"
            android:src="@mipmap/img_default"

            />

        <TextView
            android:paddingBottom="10pt"
            android:paddingTop="10pt"
            android:paddingStart="14pt"
            android:paddingEnd="14pt"
            android:background="@drawable/bg_jianbian_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爆品"
            android:textColor="@color/white"
            android:textSize="22pt"
            />
    </RelativeLayout>

    <LinearLayout
        android:padding="20pt"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#222222"
            android:textSize="30pt" />

        <TextView
            android:id="@+id/tvStoreSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24pt"
            android:textColor="@color/color_666666"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20pt"
                android:text="销量 0"
                android:textColor="#666666"
                android:textSize="24pt" />

            <androidx.legacy.widget.Space
                android:layout_width="0pt"
                android:layout_height="0pt"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tvBuy"
                android:paddingBottom="10pt"
                android:paddingTop="10pt"
                android:paddingEnd="18pt"
                android:paddingStart="18pt"
                android:background="@drawable/round30red_shopcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textColor="@color/white"
                android:textSize="24pt" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSalePrice"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20pt"
                android:text="¥0"
                android:textColor="@color/appColor"
                android:textSize="36pt" />


            <TextView
                android:id="@+id/tvPrice"
                android:layout_marginStart="30pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20pt"
                android:text="¥0"
                android:textColor="@color/color_666666"
                android:textSize="26pt" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15pt"
            android:orientation="horizontal">

            <com.cdxz.liudake.view.DrawableTextView
                android:visibility="gone"
                android:id="@+id/tvDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="16pt"
                android:gravity="center"
                android:text="默认地址"
                android:textColor="@color/appColor"
                android:textSize="24pt"
                app:dt_left_drawable="@mipmap/icon_adress_select"
                app:dt_left_height="30pt"
                app:dt_left_width="30pt" />


            <com.cdxz.liudake.view.DrawableTextView
                android:id="@+id/tvEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50pt"
                android:drawablePadding="16pt"
                android:gravity="center"
                android:text="编辑"
                android:textColor="#3C3C3C"
                android:textSize="24pt"
                app:dt_left_drawable="@mipmap/icon_adress_edit"
                app:dt_left_height="26pt"
                app:dt_left_width="26pt" />
            <androidx.legacy.widget.Space
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.cdxz.liudake.view.DrawableTextView
                android:id="@+id/tvDeleteAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="16pt"
                android:gravity="center"
                android:text="删除"
                android:textColor="#3C3C3C"
                android:textSize="24pt"
                app:dt_left_drawable="@mipmap/icon_adress_delete"
                app:dt_left_height="26pt"
                app:dt_left_width="26pt" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>