<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ScanQRCodeActivity">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/zxingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_borderSize="0dp"
        app:qrcv_cornerSize="0dp"
        app:qrcv_isAutoZoom="true"
        app:qrcv_isOnlyDecodeScanBoxArea="false"
        app:qrcv_isScanLineReverse="false"
        app:qrcv_isShowLocationPoint="true"
        app:qrcv_maskColor="@android:color/transparent"
        app:qrcv_scanLineSize="0dp" />

    <ImageView
        android:id="@+id/ivTitleBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="onBack"
        android:padding="16dp"
        android:src="@mipmap/ic_black_back"
        tools:ignore="OnClick" />
</RelativeLayout>