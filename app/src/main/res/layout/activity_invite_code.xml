<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.my.InviteCodeActivity">

    <include layout="@layout/public_title_bar" />

    <TextView
        style="@style/sp14.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="我的邀请码" />

    <TextView
        android:id="@+id/tvInviteCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:includeFontPadding="false"
        android:text="000000"
        android:textColor="@color/color_343434"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCopyInviteCode"
        style="@style/sp16.AppColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="复制邀请码" />

    <RelativeLayout
        android:id="@+id/qrcodeLayout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp">

        <ImageView
            android:id="@+id/ivQrcode"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo" />
    </RelativeLayout>

    <TextView
        style="@style/sp14.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="扫码注册下载APP" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSaveQRCode"
            style="@style/sp16.AppColor"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_invite_code_save_pic"
            android:gravity="center"
            android:text="保存图片" />

        <TextView
            android:id="@+id/tvShareCode"
            style="@style/sp16"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_invite_code_share"
            android:gravity="center"
            android:text="直接分享"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>