<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.my.service.OpenStoreTypeActivity">

    <include layout="@layout/public_title_bar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGeTiGong"
            style="@style/sp18"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_r4"
            android:gravity="center"
            android:text="个体工商户"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvXiaoWei"
            style="@style/sp18"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_order_button_bg"
            android:gravity="center"
            android:text="个体小微商户"
            android:textColor="@color/color_FF5033"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvQiye"
            style="@style/sp18"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_order_button_bg"
            android:gravity="center"
            android:text="企业商户"
            android:textColor="@color/color_FF5033" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSubmitType"
        style="@style/sp16"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:background="@drawable/shape_buy_bg2"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white" />
</RelativeLayout>