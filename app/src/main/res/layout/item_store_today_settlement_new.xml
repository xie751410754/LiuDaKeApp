<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="206pt"
    android:orientation="vertical"
    android:paddingStart="20pt"
    android:paddingTop="20pt">


    <TextView
        android:id="@+id/tv_postion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round8f1f1f1_shop"
        android:paddingStart="15pt"
        android:paddingTop="5pt"
        android:paddingEnd="15pt"
        android:paddingBottom="5pt"
        android:text="NO.01"
        android:textColor="#222222"
        android:textSize="20pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_postion"
        android:layout_marginTop="10pt"
        android:text="李德峰 13388808051"
        android:textColor="@color/color_222222"
        android:textSize="28pt" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="10pt"
        android:text="2021.03-15 18:26"
        android:textColor="#666666"
        android:textSize="24pt" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="41pt"
        android:text="1.00"
        android:textColor="#FF6600"
        android:textSize="50pt"
         />

    <TextView
        android:id="@+id/tv_hm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10pt"
        android:layout_marginEnd="20pt"
        android:background="@drawable/shape_stroke_radius_10pt"
        android:paddingStart="14pt"
        android:paddingTop="5pt"
        android:paddingEnd="14pt"
        android:paddingBottom="5pt"
        android:text="积攒红米0.95"
        android:textColor="@color/appColor"
        android:textSize="22pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_alignParentBottom="true"
        android:background="#EBECEE" />

</RelativeLayout>