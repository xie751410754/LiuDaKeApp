<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="600pt">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100pt"
                    android:layout_marginStart="20pt"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="20pt">

                    <LinearLayout
                        android:id="@+id/img_back"
                        android:layout_width="100pt"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="19pt"
                            android:layout_height="38pt"
                            android:layout_gravity="bottom"
                            android:src="@mipmap/icon_return" />
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="244pt"
                android:layout_height="82pt"
                android:layout_above="@id/ll1"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20pt"
                android:layout_marginBottom="90pt"
                android:alpha="0.74"
                android:background="@drawable/round8black_shop"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10pt"
                    android:text="5.0"
                    android:textColor="#FE9D44"
                    android:textSize="50pt" />

                <View
                    android:layout_width="1pt"
                    android:layout_height="50pt"
                    android:background="#FE9D44" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10pt"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8pt"
                        android:text="店里环境很美很棒"
                        android:textColor="#FE9D44"
                        android:textSize="18pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共 0 条评论"
                        android:textColor="#E5E5E5"
                        android:textSize="18pt" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl1"
                android:layout_marginStart="20pt"
                android:layout_marginTop="-70pt"
                android:layout_marginEnd="20pt"
                android:background="@drawable/round8white_shop"
                android:orientation="vertical"
                android:paddingStart="28pt"
                android:paddingTop="20pt">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="溜达客茶饮店"
                    android:textColor="#202020"
                    android:textSize="32pt" />

                <TextView
                    android:id="@+id/tvStoreType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10pt"
                    android:textColor="#666666"
                    android:textSize="24pt" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30pt"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStoreConsumption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥0.00"
                        android:textColor="#E62129"
                        android:textSize="34pt"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvStoreAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40pt"
                        android:textColor="#666666"
                        android:textSize="24pt" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tvStoreTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20pt"
                    android:text="库存0"
                    android:textColor="#666666"
                    android:textSize="24pt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1pt"
                    android:layout_marginTop="20pt"
                    android:background="#EBECEE" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll1"
                android:layout_marginStart="20pt"
                android:layout_marginTop="40pt"
                android:layout_marginEnd="20pt"
                android:background="@drawable/round8white_shop"
                android:orientation="vertical"
                android:paddingStart="28pt"
                android:paddingEnd="28pt"
                android:paddingTop="20pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品详情"
                    android:textColor="#222222"
                    android:textSize="32pt" />

                <ImageView
                    android:visibility="gone"
                    android:layout_marginTop="20pt"
                    android:id="@+id/imgDetail"
                    android:layout_width="match_parent"
                    android:layout_height="600pt"
                    android:scaleType="fitXY" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_imgDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="30pt"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_SalePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0.00"
                android:textColor="#E62129"
                android:textSize="34pt"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:text="¥0.00"
                android:id="@+id/tv_OrginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40pt"
                android:textColor="#666666"
                android:textSize="24pt" />
            <androidx.legacy.widget.Space
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/tvBuy"
                android:paddingBottom="10pt"
                android:paddingTop="10pt"
                android:paddingEnd="18pt"
                android:paddingStart="18pt"
                android:background="@drawable/round30red_shopcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="24pt" />
        </LinearLayout>

    </FrameLayout>


</RelativeLayout>