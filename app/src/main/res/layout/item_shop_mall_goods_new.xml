<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round8white_shop"
    android:orientation="vertical">

    <com.cdxz.liudake.view.roundedImageView.RoundedImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="345pt"
        android:scaleType="fitXY"
        app:riv_corner_radius_top_left="8pt"
        app:riv_corner_radius_top_right="8pt" />

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17pt"
        android:layout_marginTop="20pt"
        android:layout_marginEnd="20pt"
        android:lineSpacingExtra="5pt"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="商品名称"
        android:textColor="#333333"
        android:textSize="28pt" />

    <LinearLayout
        android:layout_marginTop="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvGoodsNewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textColor="#E62129"
            android:textSize="30pt"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分 0"
            android:textColor="#E62129"
            android:textSize="30pt"
            android:textStyle="bold" />

        <androidx.legacy.widget.Space
            android:layout_width="0pt"
            android:layout_height="0pt"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvGoodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20pt"
            android:text="¥0.00"
            android:textColor="#808080"
            android:textSize="22pt" />


    </LinearLayout>


    <TextView
        android:id="@+id/tvSellNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17pt"
        android:layout_marginTop="4pt"
        android:layout_marginBottom="20pt"
        android:text="已售 0"
        android:textColor="#808080"
        android:textSize="20pt" />


</LinearLayout>