<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/tvAddressInfo"
        style="@style/sp12.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="34dp"
        android:text="收货地址"
        app:layout_constraintEnd_toStartOf="@id/view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvUserInfo"
        style="@style/sp12.999999"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="姓名 电话"
        app:layout_constraintEnd_toStartOf="@id/tvDefault"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAddressInfo" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/color_F3F3F3"
        app:layout_constraintBottom_toBottomOf="@id/tvUserInfo"
        app:layout_constraintEnd_toStartOf="@id/tvEdit"
        app:layout_constraintTop_toTopOf="@id/tvAddressInfo" />

    <TextView
        android:id="@+id/tvEdit"
        style="@style/sp12.999999"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="编辑"
        app:layout_constraintBottom_toBottomOf="@id/tvUserInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvAddressInfo" />

    <TextView
        android:id="@+id/tvDefault"
        style="@style/sp12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认地址"
        android:textColor="@color/color_666666"
        app:layout_constraintEnd_toEndOf="@id/tvAddressInfo"
        app:layout_constraintTop_toTopOf="@id/tvUserInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>