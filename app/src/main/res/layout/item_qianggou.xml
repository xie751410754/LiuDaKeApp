<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.cdxz.liudake.view.roundedImageView.RoundedImageView
        android:id="@+id/ivQiangGouPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="4dp" />

    <TextView
        android:id="@+id/tvQiangGouName"
        style="@style/sp14.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="1"
        android:text="@string/app_name"
        app:layout_constraintEnd_toEndOf="@id/ivQiangGouPicture"
        app:layout_constraintStart_toStartOf="@id/ivQiangGouPicture"
        app:layout_constraintTop_toBottomOf="@id/ivQiangGouPicture" />

    <TextView
        android:id="@+id/tvQiangGouPrice"
        style="@style/sp12.AppColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ï¿¥0.00"
        app:layout_constraintStart_toStartOf="@id/ivQiangGouPicture"
        app:layout_constraintTop_toBottomOf="@id/tvQiangGouName" />

</androidx.constraintlayout.widget.ConstraintLayout>