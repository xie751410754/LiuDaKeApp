<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.my.AboutUsActivity">

    <include layout="@layout/public_title_bar" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="56dp"
        android:src="@mipmap/logo" />

    <com.cdxz.liudake.view.DrawableTextView
        android:id="@+id/tvAboutApp"
        style="@style/sp14.Black"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:text="关于溜达客"
        app:dt_right_drawable="@mipmap/icon_more"
        app:dt_right_height="24dp"
        app:dt_right_width="24dp" />

    <com.cdxz.liudake.view.DrawableTextView
        android:id="@+id/tvUserXY"
        style="@style/sp14.Black"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:text="用户协议"
        app:dt_right_drawable="@mipmap/icon_more"
        app:dt_right_height="24dp"
        app:dt_right_width="24dp" />

    <com.cdxz.liudake.view.DrawableTextView
        android:id="@+id/tvYs"
        style="@style/sp14.Black"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:text="隐私协议"
        app:dt_right_drawable="@mipmap/icon_more"
        app:dt_right_height="24dp"
        app:dt_right_width="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <TextView
            style="@style/sp14.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本更新" />

        <TextView
            android:id="@+id/tvVersionName"
            style="@style/sp14.AppColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="V1.0" />
    </LinearLayout>
</LinearLayout>