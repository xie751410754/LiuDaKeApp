<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivGoodsPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/tvGoodsName"
        style="@style/sp14.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@id/tvGoodsPrice"
        android:layout_toEndOf="@id/ivGoodsPic"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="商品名称" />

    <TextView
        android:id="@+id/tvGoodsType"
        style="@style/sp12.999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivGoodsPic"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/ivGoodsPic"
        android:text="规格" />


    <TextView
        android:id="@+id/tvGoodsPrice"
        style="@style/sp12.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvGoodsName"
        android:layout_alignParentEnd="true"
        android:text="¥ 0.00" />

    <TextView
        android:id="@+id/tvJifen"
        style="@style/sp12.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGoodsPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:text="+积分" />

    <TextView
        android:id="@+id/tvGoodsNum"
        style="@style/sp12.999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvGoodsType"
        android:layout_alignParentEnd="true"
        android:text="x1" />

    <TextView
        android:id="@+id/tvShouhou"
        style="@style/sp14.AppColor"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/tvGoodsNum"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/tvGoodsNum"
        android:gravity="bottom"
        android:text="申请售后"
        android:visibility="gone" />
</RelativeLayout>