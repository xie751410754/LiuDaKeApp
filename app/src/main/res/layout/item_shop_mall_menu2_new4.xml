<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20pt"
    android:background="@drawable/round20white_shop_my"
    android:orientation="vertical"
    android:padding="20pt">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/four_tvTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热卖推荐"
            android:textColor="#222222"
            android:textSize="32pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/four_tvTips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日限兑一次"
            android:textColor="#222222"
            android:textSize="24pt"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_miaosha4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20pt"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/four_tv_hour"
                android:layout_width="29pt"
                android:layout_height="24pt"
                android:background="#222222"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="17pt" />

            <TextView
                android:layout_width="4pt"
                android:layout_height="24pt"
                android:layout_marginStart="3pt"
                android:gravity="center"
                android:text=":"
                android:textColor="#222222"
                android:textSize="17pt" />

            <TextView
                android:id="@+id/four_tv_min"
                android:layout_width="29pt"
                android:layout_height="24pt"
                android:background="#222222"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="17pt" />

            <TextView
                android:layout_width="4pt"
                android:layout_height="24pt"
                android:layout_marginStart="3pt"
                android:gravity="center"
                android:text=":"
                android:textColor="#222222"
                android:textSize="17pt" />

            <TextView
                android:id="@+id/four_tv_sec"
                android:layout_width="29pt"
                android:layout_height="24pt"
                android:background="#222222"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="17pt" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14pt"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.cdxz.liudake.view.roundedImageView.RoundedImageView
                android:id="@+id/four_ivImage1"
                android:layout_width="133pt"
                android:layout_height="133pt"
                android:scaleType="fitXY"
                app:riv_corner_radius="8pt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/four_tv_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30积分"
                    android:textColor="#E62129"
                    android:textSize="22pt" />

                <TextView
                    android:id="@+id/four_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥119"
                    android:textColor="#808080"
                    android:textSize="18pt" />
            </LinearLayout>


            <TextView
                android:id="@+id/four_tv_priceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30积分"
                android:textColor="#E62129"
                android:textSize="22pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="10pt"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.cdxz.liudake.view.roundedImageView.RoundedImageView
                android:id="@+id/four_ivImage2"
                android:layout_width="133pt"
                android:layout_height="133pt"
                android:scaleType="fitXY"
                app:riv_corner_radius="8pt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/four_jifen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30积分"
                    android:textColor="#E62129"
                    android:textSize="22pt" />

                <TextView
                    android:id="@+id/four_tv_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥119"
                    android:textColor="#808080"
                    android:textSize="18pt" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:background="@drawable/bg_jianbian"
        android:paddingStart="16pt"
        android:paddingEnd="22pt"
        android:paddingBottom="5pt"
        android:text="立即疯抢 >"
        android:textColor="#FFFFFF"
        android:textSize="24pt" />


</LinearLayout>