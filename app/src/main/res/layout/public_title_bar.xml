<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/titleRootLayout"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:layout_height="60dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivTitleBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBack"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:src="@mipmap/ic_black_back"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleText"
        app:layout_constraintTop_toTopOf="@+id/tvTitleText" />

    <TextView
        android:id="@+id/tvTitleText"
        style="@style/sp18.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleRight"
        style="@style/sp14.AppColor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:onClick="onRightClick"
        android:paddingHorizontal="15dp"
        android:text="@string/app_name"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>