<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:animateLayoutChanges="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380pt"
            android:background="@mipmap/register_bg">
            <ImageView
                android:layout_marginTop="60pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/register_logo"
                />
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_marginTop="230pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44pt"
            android:layout_marginRight="44pt"
            app:cardElevation="8pt"
            app:cardCornerRadius="8pt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120pt"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="40pt"
                        android:layout_marginStart="60pt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册"
                        android:textColor="#3E4A59"
                        android:textSize="48pt" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="100pt"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="120pt"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="38pt"
                        android:src="@mipmap/register_recommend"/>

                    <com.cdxz.liudake.view.ClearEditText
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="43pt"
                        android:background="@null"
                        android:hint="输入你的名字"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textColor="#333333"
                        android:textColorHint="#666666"
                        android:textSize="24pt" />


                </LinearLayout>

                <View
                    android:layout_marginEnd="30pt"
                    android:layout_marginStart="30pt"
                    android:layout_width="match_parent"
                    android:layout_height="2pt"
                    android:background="#EBECEE" />

                <LinearLayout
                    android:layout_marginStart="100pt"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="120pt"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="38pt"
                        android:src="@mipmap/register_phone"/>

                    <com.cdxz.liudake.view.ClearEditText
                        android:id="@+id/phone_numer_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="43pt"
                        android:background="@null"
                        android:hint="输入你的用户名/手机号"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:textColor="#333333"
                        android:textColorHint="#666666"
                        android:textSize="24pt" />


                </LinearLayout>

                <View
                    android:layout_marginEnd="30pt"
                    android:layout_marginStart="30pt"
                    android:layout_width="match_parent"
                    android:layout_height="2pt"
                    android:background="#EBECEE" />
                <LinearLayout
                    android:layout_marginStart="100pt"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="120pt"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="38pt"
                        android:src="@mipmap/register_password"/>

                    <com.cdxz.liudake.view.ClearEditText
                        android:id="@+id/password_edit"
                        android:layout_marginStart="43pt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="输入您的密码"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textColor="#333333"
                        android:textColorHint="#666666"
                        android:textSize="24pt"
                        android:background="@null"
                        />


                </LinearLayout>

                <View
                    android:layout_marginEnd="30pt"
                    android:layout_marginStart="30pt"
                    android:layout_width="match_parent"
                    android:layout_height="2pt"
                    android:background="#EBECEE" />
                <LinearLayout
                    android:layout_marginStart="100pt"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="120pt"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="38pt"
                        android:src="@mipmap/register_password"/>

                    <com.cdxz.liudake.view.ClearEditText
                        android:id="@+id/password_edit_submit"
                        android:layout_marginStart="43pt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请再次确认一遍密码"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textColor="#333333"
                        android:textColorHint="#666666"
                        android:textSize="24pt"
                        android:background="@null"
                        />


                </LinearLayout>

                <View
                    android:layout_marginEnd="30pt"
                    android:layout_marginStart="30pt"
                    android:layout_width="match_parent"
                    android:layout_height="2pt"
                    android:background="#EBECEE" />
                <LinearLayout
                    android:layout_marginStart="100pt"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="120pt"
                    android:orientation="horizontal">


                    <com.cdxz.liudake.view.ClearEditText
                        android:id="@+id/auth_code_edit"
                        android:paddingStart="70pt"
                        android:layout_width="0pt"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:hint="输入验证码"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textColor="#333333"
                        android:textColorHint="#666666"
                        android:textSize="24pt"
                        android:background="@null"
                        />
                    <TextView
                        android:layout_margin="20pt"
                        android:textSize="32pt"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/send_again_btn"
                        android:layout_width="0pt"
                        android:layout_height="match_parent"
                        android:background="@mipmap/register_yzm"
                        android:textColor="#FFFFFF"
                        android:text="获取验证码" />

                </LinearLayout>

                <View
                    android:layout_marginEnd="30pt"
                    android:layout_marginStart="30pt"
                    android:layout_width="match_parent"
                    android:layout_height="2pt"
                    android:background="#EBECEE" />

                <LinearLayout
                    android:layout_marginStart="100pt"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="120pt"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24pt"
                        android:layout_height="38pt"
                        android:src="@mipmap/register_recommend"/>

                    <com.cdxz.liudake.view.ClearEditText
                        android:id="@+id/etInvitationCode"
                        android:layout_marginStart="43pt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="输入推荐码（选填）"
                        android:singleLine="true"
                        android:textColor="#333333"
                        android:textColorHint="#666666"
                        android:textSize="24pt"
                        android:background="@null"
                        />


                </LinearLayout>

                <View
                    android:layout_marginBottom="80pt"
                    android:layout_marginEnd="30pt"
                    android:layout_marginStart="30pt"
                    android:layout_width="match_parent"
                    android:layout_height="2pt"
                    android:background="#EBECEE" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_back_login"
            android:layout_marginBottom="30pt"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28pt"
            android:textColor="#222222"
            android:text="返回登录"/>

        <Button
            android:id="@+id/next_step_btn"
            android:layout_marginBottom="100pt"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/register_zhuce"
            android:layout_width="480pt"
            android:layout_height="80pt"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/sp12.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即同意" />

            <TextView
                android:id="@+id/tvUserXY"
                style="@style/sp12.AppColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户协议》"
                android:textColor="@color/color_FF6833" />

            <TextView
                style="@style/sp12.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和" />

            <TextView
                android:id="@+id/tvYs"
                style="@style/sp12.AppColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《隐私政策》"
                android:textColor="@color/color_FF6833" />
        </LinearLayout>
    </RelativeLayout>
</layout>