<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:layout_marginTop="20pt"
        android:orientation="horizontal"
        android:paddingStart="25pt"
        android:paddingEnd="51pt">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_position"
            android:layout_width="55pt"
            android:layout_height="45pt"
            android:textColor="#DCDCDC"
            android:textSize="36pt"
            />

        <ImageView
            android:id="@+id/img_rank"
            android:layout_width="55pt"
            android:layout_height="45pt" />

        <com.cdxz.liudake.view.roundedImageView.RoundedImageView
            android:id="@+id/img_rank_head"
            android:layout_width="50pt"
            android:layout_height="50pt"
            app:riv_oval="true"
            android:layout_marginStart="72pt" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21pt"
            android:textColor="@color/color_222222"
            android:textSize="32pt" />

        <androidx.legacy.widget.Space
            android:layout_width="0pt"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_rankNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="36pt" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5pt"
        android:background="@color/color_F3F3F3" />
</LinearLayout>