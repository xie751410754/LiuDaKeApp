<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_jianbian_invitecode"
    android:orientation="vertical"
    tools:context=".ui.my.InviteCodeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/img_back"
                android:layout_width="120pt"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="19pt"
                    android:layout_height="38pt"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20pt"
                    android:contentDescription="@null"
                    android:src="@mipmap/icon_back_store_home" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/tvShareCode"
                android:layout_width="42pt"
                android:layout_height="42pt"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20pt"
                android:src="@mipmap/icon_share_invitecode" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl1"
            android:layout_marginTop="120pt"
            android:layout_marginBottom="26pt"
            android:background="@mipmap/bg_invitecode"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130pt"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="132pt"
                    android:layout_height="27pt"
                    android:src="@mipmap/icon_shuibowen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27pt"
                    android:layout_marginEnd="27pt"
                    android:fontFamily="sans-serif"
                    android:text="我的邀请码"
                    android:textColor="#FF6600"
                    android:textSize="36pt" />

                <ImageView
                    android:layout_width="132pt"
                    android:layout_height="27pt"
                    android:src="@mipmap/icon_shuibowen" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvInviteCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60pt"
                android:textColor="#595FE7"
                android:textSize="72pt" />

            <TextView
                android:id="@+id/tvCopyInviteCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48pt"
                android:background="@drawable/r34_orange"
                android:paddingStart="40pt"
                android:paddingTop="14pt"
                android:paddingEnd="40pt"
                android:paddingBottom="14pt"
                android:text="复制"
                android:textColor="#FFFFFF"
                android:textSize="28pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40pt"
                android:fontFamily="sans-serif"
                android:text="复制邀请码，邀请更多好友来加入"
                android:textColor="#191919"
                android:textSize="28pt" />

            <RelativeLayout
                android:id="@+id/qrcodeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120pt">

                <ImageView
                    android:id="@+id/ivQrcode"
                    android:layout_width="263pt"
                    android:layout_height="263pt" />

                <ImageView
                    android:layout_width="50pt"
                    android:layout_height="50pt"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/logo" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9pt"
                android:text="扫码下载我们的APP"
                android:textColor="#191919"
                android:textSize="28pt" />

            <TextView
                android:id="@+id/tvSaveQRCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48pt"
                android:background="@drawable/r34_orange"
                android:paddingStart="40pt"
                android:paddingTop="14pt"
                android:paddingEnd="40pt"
                android:paddingBottom="14pt"
                android:text="保存图片"
                android:textColor="#FFFFFF"
                android:textSize="28pt" />
        </LinearLayout>

        <com.cdxz.liudake.view.roundedImageView.RoundedImageView
            android:id="@+id/ivAvatar"
            android:layout_width="166pt"
            android:layout_height="166pt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160pt"
            app:riv_oval="true" />

    </RelativeLayout>

</LinearLayout>